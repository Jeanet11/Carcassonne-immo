{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12  col-sm-12 col-xs-12">

            <h2 class="col-lg-11 col-lg-offset-1 col-sm-12 col-xs-12  titre-annonces">Annonces</h2>
            <br>

                {{ form_start(form)}}

                <div class="row ">
                    <div class=" col-lg-5 col-lg-offset-1 col-sm-10 col-xs-10"> 

                        <div id="custom-search-input">
                            <div class="  input-group  row annonce-recherche">

                                {{ form_widget(form.search, {'attr': {'class': 'col-lg-4 col-md-12  input-sm form-control',
                                'placeholder': 'Rechercher par titre'}}
                                ) }}

                                {{ form_widget(form.categories, {'attr': {'class': 'col-lg-3 col-md-12  input-sm form-control'}}
                                ) }}
                            
                                <span class="input-group-btn">
                                    <button class="btn btn-success btn-sm" type="submit">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div> 
                </div>
            </br>

            {{ form_end(form)}}

            {% for announce in announces %}
                <div class=" announce-list  panel panel-default col-lg-10 col-lg-offset-1 col-sm-12 col-md-12 col-xs-12">
                    <div class="row">
                        <div class="overlay over"></div>

                        <div class="list-unstyled row">
                            <div class="col-lg-7 col-xs-12 ann liste" id="link-show">
                                <a href="{{ path('announce_show', { 'id': announce.id }) }}">{{ announce.title }}</a>
                            </div>

                            <div class="col-lg-5  col-xs-12">
                                <div class="row list-unstyled">
                                    <div class=" col-lg-5 col-xs-6 ann liste2 text-center">{{announce.numberOfRooms ~ ' pièces' }}</div>
<div class="price col-lg-7 col-xs-6 text-center ann liste3 text-center">{{announce.price | number_format(0, ',',' ')}} €</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        {% endblock %}